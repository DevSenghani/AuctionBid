<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= team.name %> Dashboard - Cricket Auction</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/home">Cricket Auction</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/auction">Auction</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/teams">Teams</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/results">Results</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <span class="nav-link">Welcome, <%= team.name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/team/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h1 class="mb-4"><%= team.name %> Dashboard</h1>
    
    <% if (typeof usingMockDb !== 'undefined' && usingMockDb) { %>
      <div class="alert alert-warning">
        <strong>Note:</strong> Database connection could not be established. Using mock data for demonstration.
      </div>
    <% } %>
    
    <div class="row">
      <!-- Team Information Card -->
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Team Information</h5>
          </div>
          <div class="card-body">
            <div class="dashboard-card">
              <h4><strong>Team Name:</strong> <%= team.name %></h4>
              <h4><strong>Owner:</strong> <%= team.owner || 'Not specified' %></h4>
              <h4><strong>Budget Remaining:</strong> <%= typeof team.budget !== 'undefined' && team.budget !== null ? team.budget.toLocaleString() : '0' %></h4>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Current Auction Card -->
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0">Current Auction</h5>
          </div>
          <div class="card-body" id="current-auction">
            <div id="auction-status">
              <p>Check back during the live auction to place bids.</p>
              <a href="/auction" class="btn btn-primary">Go to Auction</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <!-- Team Players Card -->
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0">Your Players</h5>
          </div>
          <div class="card-body">
            <% if (team_players && team_players.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Role</th>
                      <th>Base Price</th>
                      <th>Bid Amount</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% team_players.forEach(player => { %>
                      <tr>
                        <td><%= player.name %></td>
                        <td><%= player.role %></td>
                        <td><%= typeof player.base_price !== 'undefined' && player.base_price !== null ? player.base_price.toLocaleString() : '0' %></td>
                        <td><%= typeof player.base_price !== 'undefined' && player.base_price !== null ? player.base_price.toLocaleString() : '0' %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="alert alert-info">
                You haven't acquired any players yet. Participate in the auction to build your team.
              </div>
            <% } %>
          </div>
        </div>
      </div>
      
      <!-- Bid History Card -->
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Your Bid History</h5>
          </div>
          <div class="card-body">
            <% if (bid_history && bid_history.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Player</th>
                      <th>Role</th>
                      <th>Bid Amount</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% bid_history.forEach(bid => { %>
                      <tr>
                        <td><%= bid.player.name %></td>
                        <td><%= bid.player.role %></td>
                        <td><%= typeof bid.amount !== 'undefined' && bid.amount !== null ? bid.amount.toLocaleString() : '0' %></td>
                        <td>
                          <% if (!bid.is_active) { %>
                            <% if (bid.is_winning) { %>
                              <span class="badge bg-success">Won</span>
                            <% } else { %>
                              <span class="badge bg-danger">Lost</span>
                            <% } %>
                          <% } else { %>
                            <span class="badge bg-warning">Active</span>
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="alert alert-info">
                You haven't placed any bids yet. Participate in the auction to start bidding.
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Check for active auction every 30 seconds
      const checkActiveAuction = async () => {
        try {
          const response = await fetch('/team/active-auction');
          const data = await response.json();
          
          if (data.active_auction) {
            document.getElementById('auction-status').innerHTML = `
              <div class="alert alert-info">
                <strong>Active Auction:</strong> ${data.active_auction.player_name} (${data.active_auction.player_role})
              </div>
              <p><strong>Base Price:</strong> ${typeof data.active_auction.base_price !== 'undefined' && data.active_auction.base_price !== null ? data.active_auction.base_price.toLocaleString() : '0'}</p>
              <p><strong>Current Highest Bid:</strong> ${data.active_auction.highest_bid ? data.active_auction.highest_bid.toLocaleString() : 'No bids yet'}</p>
              <p><strong>Your Budget:</strong> ${typeof data.team_budget !== 'undefined' && data.team_budget !== null ? data.team_budget.toLocaleString() : '0'}</p>
              <a href="/auction" class="btn btn-success">Go to Auction Room</a>
            `;
          }
        } catch (error) {
          console.error('Error checking for active auction:', error);
        }
      };
      
      // Initial check
      checkActiveAuction();
      
      // Set interval for polling
      setInterval(checkActiveAuction, 30000);
    });
  </script>
</body>
</html> 